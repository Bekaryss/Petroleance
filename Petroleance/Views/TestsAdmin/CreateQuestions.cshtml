@model Petroleance.Models.TriviaQuestion

@{
    ViewBag.Title = "Новый вопрос";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<article class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="col s12">
            <form class="row">
                <h4>Новый вопрос</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.Title, new { @id = "editor2" })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                </div>

                <input id="TestId" name="TestId" value="@ViewBag.Id" hidden>
                <br />
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Создать" class="btn btn-default" />
                    </div>
                </div>
            </form>
        </div>
        
    }
    <br />
    <div>
        @Html.ActionLink("Назад к новостям", "Index")
    </div>

</article>


@section Scripts {
    <script src="~/Content/ckfinder/ckfinder.js" type="text/javascript"></script>
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        CKEDITOR.replace('editor2');
        CKFinder.setupCKEditor(null, '@Url.Content("~/Content/ckfinder/")');
    </script>
}
